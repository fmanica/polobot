while True:
    try:
        getTickerInfo()
        getOrderBook()
        print("Sleep for " + str(sleepTime) + "s")
        time.sleep(sleepTime)
    except Exception as e:
        print("ERROR: " + str(e))
        time.sleep(sleepTime)
        pass
