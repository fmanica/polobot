def getTickerInfo():
        tickerResponse = polo.returnTicker();
        for couple in tickerResponse:
                currencies = couple.split('_')
                ref = currencies[0]
                currency = currencies[1]
                time = log.timestamp
                if ref == 'BTC' and currency in interestedCurrencies:
                        tickerData = {time : {couple : tickerResponse [couple]}}
                        with open(("data\%s.txt" % couple), "a") as myfile:
                                myfile.write(tickerData)
                                
